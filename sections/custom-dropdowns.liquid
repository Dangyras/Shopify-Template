      {
        "type": "color",
        "id": "content_accent_2",
        "label": "Colour: Accent 2"
      },
      {
        "type": "color",
        "id": "content_accent_3",
        "label": "Colour: Accent 3"
      },
      {
        "type": "color",
        "id": "button_text_1",
        "label": "Button: Text"
      },
      {
        "type": "color",
        "id": "button_background_1",
        "label": "Button: Background"
      }, 
      {
        "type": "header",
        "content": "Spacing"
      },
      {
         "type":      "select",
         "id":        "width",
         "label":     "Width: Section",
