{% assign ss = section.settings %}
{% assign type = "dropdowns" | downcase | replace: " ", "_" %}

{% capture section_classes -%}
  {%- if ss.desktop %}hide--smUp {% endif -%}
  {%- if ss.mobile %}hide--smDown {% endif -%}
  {%- if ss.mirror %}style--mirror {% endif -%}
  {%- if ss.section_margin_1_options %}margin--{{ ss.section_margin_1_options }}{% endif -%}
{%- endcapture %}

<section
  id="section__{{ section.id }}"
  class="section--wrapper {{ section_classes }}"
  data-section="{{ type }}"
>
  <div class="container container--{{ ss.width }}">
    <div class="section--inner">
      {% render 'custom-sections', section: section, type: type, metafields: true %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "• Dropdowns",
    "settings": [
      {
        "type": "header",
        "content": "Content settings"
      },
      {
        "type": "inline_richtext",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "checkbox",
        "id": "decoration",
        "default": false,
        "label": "Decoration"
      },
      {
        "type": "image_picker",
        "id": "bottom_image",
        "label": "Image"
      },
      {
        "type": "richtext",
        "id": "text_1",
        "label": "Text top"
      },
      {
        "type": "richtext",
        "id": "bottom_text",
        "label": "Text"
      },
      {
        "type": "header",
        "content": "Section settings"
      },
      {
        "type": "checkbox",
        "id": "desktop",
        "default": false,
        "label": "Hide on desktop"
      },
      {
        "type": "checkbox",
        "id": "mobile",
        "default": false,
        "label": "Hide on mobile"
      },
      {
        "type": "checkbox",
        "id": "h1",
        "default": false,
        "label": "Heading: H1"
      },
      {
        "type": "header",
        "content": "Colours"
      },
      {
        "type": "color",
        "id": "section_background_1",
        "label": "Background: Section"
      },
      {
        "type": "color",
        "id": "content_background_1",
        "label": "Background: Content"
      },
      {
        "type": "color",
        "id": "content_background_2",
        "label": "Background: Content 2"
      },
      {
        "type": "color",
        "id": "content_background_3",
        "label": "Background: Content 3"
      },
      {
        "type": "color",
