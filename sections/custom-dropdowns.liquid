        "label": "Colour: Text 1"
      },
      {
        "type": "color",
        "id": "content_text_2",
        "label": "Colour: Text 2"
      },
      {
        "type": "color",
        "id": "content_text_3",
        "label": "Colour: Text 3"
      },
      {
        "type": "color",
        "id": "content_text_4",
        "label": "Colour: Text 4"
      },
      {
        "type": "color",
        "id": "content_accent_1",
        "label": "Colour: Accent 1"
