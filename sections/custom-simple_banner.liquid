{% assign ss = section.settings %}
{% assign type = "Simple Banner" | downcase | replace: " ", "_" %}

{% capture section_classes -%}
  {%- if ss.desktop %}hide--smUp {% endif -%}
  {%- if ss.mobile %}hide--smDown {% endif -%}
  {%- if ss.mirror %}style--mirror {% endif -%}
  {%- if ss.radius %}style--radius {% endif -%} 
  {%- if ss.design %}style--{{ ss.design }} {% endif -%} 
  {%- if ss.section_margin_1_options %}margin--{{ ss.section_margin_1_options }} {% endif -%} 
  {%- if ss.section_padding_1_options %}padding--{{ ss.section_padding_1_options }} {% endif -%}
{%- endcapture %}

<section
  id="section__{{ section.id }}"
  class="section--wrapper {{ section_classes }}"
  data-section="{{ type }}"
>
  <div class="container container--{{ ss.width }}">
    <div class="section--inner">
      {% render 'custom-sections', section: section, type: type %}
    </div>
  </div>
</section>

